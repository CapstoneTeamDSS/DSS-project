@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Location Management</h3>
        </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Location List</h2><br>
                </div>
                <div class="bs-glyphicons" style="width:60%; margin-left: 40%;">
                    <a href="/Location/Form" class="iframe">
                        <ul class="bs-glyphicons-list">
                            <li>
                                <span class="glyphicon glyphicon-plus" aria-hidden="true" text-align:center></span>
                            </li>
                        </ul>
                    </a>
                </div>
                <div class="clearfix"></div>
                <div class="x_content">
                    <p class="text-muted font-13 m-b-30">
                        DataTables has most features enabled by default, so all you need to do to use it with your own tables is to call the construction function: <code>$().DataTable();</code>
                    </p>
                    <table id="datatable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column descending" aria-sort="ascending">
                                    Brand Name
                                </th>
                                <th>Province</th>
                                <th>District</th>
                                <th>Address</th>
                                <th>Description</th>
                                <th>Action</th>


                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var locationsList = ViewBag.locationList as List<DSS.Models.LocationAdditionalVM>;
                                var i = 0;
                                foreach (var item in locationsList)
                                {
                                    <tr>
                                        <td>@(++i)</td>
                                        <td>@(item.BrandName)</td>
                                        <td>@(item.Province)</td>
                                        <td>@(item.District)</td>
                                        <td>@(item.Address )</td>
                                        <td>@(item.Description)</td>
                                        <td style="width:180px; text-align:center">
                                            <a href="/Location/Form/@(item.LocationId)" class="iframe"><i class="fa fa-pencil btn btn-info"> Edit</i></a>
                                            <a href="/Location/Delete/@(item.LocationId)"><i class="fa fa-trash btn btn-danger"> Delete</i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <!-- Datatables -->
    <script src="~/Content/template-material/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/template-material/vendors/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script src="~/Content/template-material/vendors/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/Content/template-material/vendors/datatables.net-buttons-bs/js/buttons.bootstrap.min.js"></script>
