@model DSS.Models.ResolutionDetailVM
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout_Popup.cshtml";
    <style>
        body {
            overflow-x: hidden;
        }
    </style>
}

<div class="">
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>@((Model?.Id != null) ? "Update Resolution information" : "Add new Resolution")</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br>
                    @using (Html.BeginForm((Model?.Id != null) ? "Update" : "Add", "Resolution", new { Id = (Model?.Id) }, FormMethod.Post, new { @id = "frm_resolution", @class = "form-horizontal form-label-left", role = "form" }))
                    {
                        @Html.ValidationSummary()
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                Resolution Height <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="first-height"
                                       name="Height"
                                       class="form-control"
                                       data-parsley-id="5" type="text"
                                       value="@(Model?.Height)">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                Resolution Width <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="first-width"
                                       name="Width"
                                       class="form-control"
                                       data-parsley-id="5" type="text"
                                       value="@(Model?.Width)">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                Note
                            </label>
                            <div class="col-md-8 col-sm-8 col-xs-12">
                                <textarea class="form-control" rows="3" name="Note">@(Model?.Note)</textarea>
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        if (Model?.Id == null)
                        {
                            <div class="form-group">
                                <div class="col-md-12 col-sm-12 col-xs-12 col-md-offset-3 col-sm-offset-3 col-xs-offset-3">
                                    <button class="btn btn-primary" type="reset">Reset</button>
                                    <button type="submit" class="btn btn-success">Submit</button>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="form-group">
                                <div class="col-md-12 col-sm-12 col-xs-12 col-md-offset-3 col-sm-offset-3 col-xs-offset-3">
                                    <button type="button" class="btn btn-warning" onclick="parent.jQuery.fn.colorbox.close();">Cancel</button>
                                    <button type="submit" class="btn btn-success">Submit</button>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            var valueHeight = $("#first-height").val();
            var valueWidth = $("#first-width").val();
            if (valueHeight == 0) {
                $("#first-height").val('');
            }
            if (valueWidth == 0) {
                $("#first-width").val('');
            }
        });
    </script>
}
@section styles{
    <!--Set color is red when show error validation-->
    <style>
        .validation-summary-errors {
            color: red;
        }
    </style>
    <!--End Set color is red when show error validation-->
}

