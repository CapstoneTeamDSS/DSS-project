    <script>
        var previewWrapper;
        var time = 0;
        function playPlaylist(el) {            
            time = 0;
            var playlistId = $(el).attr("data-id");
            var mediaList = [];
            var data = {
                playlistId: playlistId,
            };
            /* Get resource list of playlist */
            $.ajax({
                type: "POST",
                url: "/Scenario/LoadPlaylistItemList",
                data: JSON.stringify(data),
                dataType: "json",
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    mediaList = data.PlaylistItemList;
                },
                error: function () {
                    alert($("#error").val());
                }
            }).done(function () {
                previewWrapper = $("div[area-id='" + areaId + "']");
                time = 0;
                $(mediaList).each(function () {
                    playlistMediaOnceByOnce(this);
                });
            });

        }
        function playlistMediaOnceByOnce(el) {
            /* Play resource once by once */
            var type = parseInt(el.mediaType);
            var url = el.URL;
            var currItemDuration = parseInt(el.duration);
            var duration = (currItemDuration == 0) ? 5000 : currItemDuration * 1000;
            setTimeout(show, time, url, type, duration);
            time += duration;
            console.log(time);
        }
        function show(url, type, duration) {
            console.log(url);
            $(previewWrapper).empty();
            var pHeigth = $(previewWrapper).css('height');
            var pWidth = $(previewWrapper).css('width');
            switch (type) {
                case 1:
                    $(previewWrapper).prepend($('<img>', { id: 'theImg', src: url }));
                    $("#theImg").css('height', pHeigth);
                    $("#theImg").css('width', pWidth);
                    //$(previewWrapper).css('margin-left', '100px');
                    break;
                case 2:
                    //$(previewWrapper).css('margin-left', '100px');
                    var video = $('<video />', {
                        id: 'video',
                        src: url,
                        height: pHeigth,
                        width: pWidth,
                        type: 'video/mp4',
                        controls: true
                    });
                    video.appendTo($(previewWrapper));
                    video[0].play();
                    break;
                case 3:
                    //$(previewWrapper).css('margin-left', '100px');
                    var video = $('<video />', {
                        id: 'video',
                        src: url,
                        height: pHeigth,
                        width: pWidth,
                        type: 'video/mp4',
                        controls: true
                    });
                    video.appendTo($(previewWrapper));
                    video[0].play();
                    //video.bind("ended", function () {
                    //    alert("done video");
                    //});
                    break;
            }
        }
    </script>
