            for (var i = 0; i < playlistList.length; i++) {
                if (playlistList[i] != '') {
                    $('#fromList').append("<li class='playlistList' onclick='playlistClick(this)' id='fromList_" + playlistList[i].Id + "' data-id='" + playlistList[i].Id + "' "
                        + ">"
                        + "<span id='title'>" + playlistList[i].Title + "</span>"
                        + "<span id='duration'>" + playlistList[i].Duration + "</span>"
                        + "<a onclick='addToArea(this)' style='position:relative; top:-15px; left:0; margin-left:60%' class='btn btn-success btnAddPlaylist' data-video-url='https://cdn.filestackcontent.com/soZhUAhGSQ6tlZRYe3TE'> + </a>"
                        + "</li>");
                }
            }
        }
        /* STEP 4*/
        function onVdPlay(el) {
            /*Marked current sellected area */
            areaId = $(el).attr("area-id");
            if (!PlaylistAreaObj[areaId]) {
                PlaylistAreaObj[areaId] = [];
            }
            $(".vdReview").css("border", "none");
            $(el).css("border", "thick solid");
            /* Render Playlist List for current selected area */
            renderPlaylistListForAnArea(el);
        }

        function renderPlaylistListForAnArea(el) {
            var areaId = $(el).attr("area-id");
            var scenarioId = $("#txtScenarioId").val();
            var areaVisualTypeID = $(el).attr("visual-type");
            var data = {
                areaId: areaId,
                scenarioId: scenarioId,
            };
            if (!scenarioId) {
                renderPlaylistList([], areaVisualTypeID);
            } else {
                $.ajax({
                    type: "POST",
                    url: "/Scenario/LoadAreaPlaylist",
                    data: JSON.stringify(data),
                    dataType: "json",
                    contentType: 'application/json; charset=utf-8',
                    success: function (data) {
                        console.log(data.ScenarioItemIds);
                        renderPlaylistList(data.ScenarioItemIds, areaVisualTypeID);
                    },
                    error: function () {
                        alert($("#error").val())
                    }
                });
            }
        }

        function renderPlaylistList(ScenarioItemIds, AreaVisualTypeId) {
            /*Remove data when change location*/
            $("#fromList").find('li').remove().end();
            $("#toList").find('li').remove().end();
            /*Load playlist list*/
            for (var i = 0; i < playlistList.length; i++) {
                if (playlistList[i] != '') {
                    var isMatchVisualType = playlistList[i].VisualTypeID == AreaVisualTypeId;
                    //Show on "from list"
                    var isShow = !isInArray(playlistList[i].Id, ScenarioItemIds) && !isInArray(playlistList[i].Id, PlaylistAreaObj[areaId]);
                    var style = isShow && isMatchVisualType ? "data-marked='true'" : "style = 'display: none' data-marked='true'";
                    $('#fromList').append("<li class='playlistList' onclick='playlistClick(this)' id='fromList_" + playlistList[i].Id + "' data-id='" + playlistList[i].Id + "' "
                        + style
                        + ">"
                        + "<span id='title'>" + playlistList[i].Title + "</span>"
                        + "<span id='duration'>" + playlistList[i].Duration + "</span>"
                        + "<a onclick='addToArea(this)' style='position:relative; top:-15px; left:0; margin-left:60%' class='btn btn-success btnAddPlaylist' data-video-url='https://cdn.filestackcontent.com/soZhUAhGSQ6tlZRYe3TE'> + </a>"
                        + "<a onclick='playPlaylist(this)' data-id='" + playlistList[i].Id + "' style='position:relative; top:-55px; left:0; margin-left:75%' class='btn btn-success fa fa-caret-square-o-right'></a>"
                        + "</li>");
                    if (!isShow && isMatchVisualType) {
                        if (!isInArray(playlistList[i].Id, PlaylistAreaObj[areaId])) {
                            PlaylistAreaObj[areaId].push(playlistList[i].Id);
                        }
                        $('#toList').append("<li class='playlistList' onclick='playlistClick(this)' id='fromList_" + playlistList[i].Id + "' data-id='" + playlistList[i].Id + "' "
                            + ">"
                            + "<span id='title'>" + playlistList[i].Title + "</span>"
                            + "<span id='duration'>" + playlistList[i].Duration + "</span>"
                            + "<a onclick='removeItem(this)' style='position:relative; top:-15px; left:0; margin-left:60%' class='btn btn-danger btnRemovePlaylist' data-video-url='https://cdn.filestackcontent.com/soZhUAhGSQ6tlZRYe3TE'> - </a>"
                            + "<a onclick='playPlaylist(this)' data-id='" + playlistList[i].Id + "' style='position:relative; top:-55px; left:0; margin-left:75%' class='iframe btn btn-success fa fa-caret-square-o-right'></a>"
                            + "</li>");
                    }
                }
            }
        }

        function isInArray(value, array) {
            return array.indexOf(value) > -1;
        }

        /*Add playlist to area*/
        function addToArea(el) {
            if (!areaId) {
                alert($("#area").val());
            } else {
                var liObjOrigin = $(el).parent()[0];
                var liObj = $(liObjOrigin).clone().appendTo("#toList");
                var playlistId = parseInt($(liObj).attr("data-id"));
                PlaylistAreaObj[areaId].push(playlistId);
                $(liObj).children('a').first().attr('class', "btn btn-danger btnRemovePlaylist");
                $(liObj).children('a').first().attr('onclick', "removeItem(this);");
                $(liObj).children('a').first().text(" - ");
                $(el).parent().hide();
            }
        };
        /*Remove playlist from area*/
        function removeItem(el) {
            var id = $(el).parent().attr("id");
            var playlistId = parseInt($(el).parent().attr("data-id"));
            $('#fromList').find("#" + id).show();
            $(el).parent().remove();
            PlaylistAreaObj[areaId] = jQuery.grep(PlaylistAreaObj[areaId], function (value) {
                return value != playlistId;
            });
            console.log(PlaylistAreaObj);
        }
        /*Marked and show info when click on playlist*/
        function playlistClick(el) {
            /*Mark*/
            $("ul > li").css("border", "none");
            $(el).css("border", "solid");
            var data = {
                playlistId: $(el).attr("data-id"),
            };
            /*Show info*/
            $.ajax({
                type: "POST",
                url: "/Scenario/LoadPlaylistInfo",
                data: JSON.stringify(data),
                dataType: "json",
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    $("#titleInfo").html(data.Title);
                    $("#descriptionInfo").html(data.Description);
                    $("#durationInfo").html(data.Duration);
                },
                error: function () {
                    $("#titleInfo").html("###");
                    $("#descriptionInfo").html("###");
                    $("#durationInfo").html("###");
                }
            });
        };

        $('#wizard').smartWizard({
            onLeaveStep: leaveAStepCallback, //Tắt check validation chuyển step
            onFinish: onFinishCallback
        });

        function leaveAStepCallback(obj, context) {
            return validateSteps(context.fromStep); // return false to stay on step and true to continue navigation
        }

        /* Submit Form Data on Finish*/
        function onFinishCallback(objs, context) {
            if (validateAllSteps()) {
                $('#frm_scenario').submit(function (event) {
                    alert("fdfd submit");
                });
            }
        }

        // Your Step validation logic
        function validateSteps(stepnumber) {
            var isStepValid = true;
            // validate step 1
            if (stepnumber == 1) {
                if (validateStep1() == false) {
                    isStepValid = false;
                    $('#wizard').smartWizard('showMessage', $("#corr").val() + stepnumber + " " + $("#next").val());
                    $('#wizard').smartWizard('setError', { stepnum: stepnumber, iserror: true });
                } else {
                    $('#wizard').smartWizard('hideMessage');
                    $('#wizard').smartWizard('setError', { stepnum: stepnumber, iserror: false });
                }
            }
            return isStepValid;
        }

        function validateStep1() {
            var isValid = true;
            /* Validate Title */
            
            var title = $("#txtTitle").val();
            if (!title.trim()) {
                isValid = false;
                $('#msg_title').html($("#title").val()).show();
            } else {
                $('#msg_title').html('').hide();
            }
            return isValid;
        }

        function validateAllSteps() {
            var isStepValid = true;
            if (validateStep1() == false) {
                isStepValid = false;
                $('#wizard').smartWizard('setError', { stepnum: 1, iserror: true });
            } else {
                $('#wizard').smartWizard('setError', { stepnum: 1, iserror: false });
            }
            if (!isStepValid) {
                $('#wizard').smartWizard('showMessage', $("#corr").val());
            }
            return isStepValid;
        }
    </script>
}
