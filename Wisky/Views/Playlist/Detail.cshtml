@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Playlist Management</h3>
        </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-6 col-sm-6 col-xs-6">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Playlist Detail</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    @using (Html.BeginForm("UpdateDetail", "Playlist", new { Id = (Model?.Id) }, FormMethod.Post, new { @id = "frm_playlist", @class = "form-horizontal form-label-left", role = "form" }))
                    {
                        <div class="stepContainer">
                            <ul id="namelist">
                                @{
                                    var playlistItemList = ViewBag.playlistItemList as List<DSS.Models.PlaylistItemVM>;
                                    var i = 0;
                                    foreach (var item in playlistItemList)
                                    {
                                        <li id='i_@(++i)' class="i-old" data-value="@(item.playlistItemId)" @*onclick="swapVideo('i_@(i)', this)"*@>
                                            <span id="title">@(item.mediaSrcTitle)</span>
                                            <span id="duration">@(item.duration)</span>
                                            <input type="hidden" name="playlistItemIds[]" value="@(item.playlistItemId)" />
                                            <input type="hidden" class="prePos" value="@(i)" />
                                            @*<input type="button" style="position:relative; top: -15px; left:0; margin-left:10%" class="btn btn-success" data-video-url="@(item.URL)" value="Play"/>*@
                                            <input type="button" style="position:relative; top: -15px; left:0; margin-left:5%" class="btn btn-danger" value="Delete"/>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                        <hr />
                        <div style="position:sticky; top:0; left:0 ">
                            <input class="btn btn-primary" style="margin-left:35%" type="button" value="Reset" onClick="window.location.href=window.location.href">
                            <input class="btn btn-success" style="margin-left:0" type="submit" value="Save Change" />
                            @*<button style="margin-left:2%" type="submit" class="btn btn-success">Submit</button>*@
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6 col-sm-6 col-xs-6">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Preview </h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div id="preview-warapper" style="display:inline-block">
                        @*<video id="player" src="~/Content/videos/video1.mp4" controls></video>*@
                    </div>
                    <hr />
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="/Content/vendors/jQuery-Smart-Wizard/js/jquery.smartWizard.js"></script>
    <script src="/Content/vendors/iCheck/icheck.min.js"></script>
    <script type="text/javascript" src="http://code.jquery.com/jquery.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
    <script>
        $("#namelist").sortable({
            connectWith: '#deleteArea',
            update: function (event, ui) {
                //Run this code whenever an item is dragged and dropped out of this list
                var order = $(this).sortable('serialize');
            },
            helper: 'clone'
        });
        $("#deleteArea").droppable({
            accept: '#namelist > li',
            activeClass: 'dropArea',
            hoverClass: 'dropAreaHover',
            drop: function (event, ui) {
                ui.draggable.remove();
            }
        });
    </script>
    <script>
        function swapVideo(id, el) {
            var allListItem = document.querySelectorAll('#namelist li');
            for (var item of allListItem) {
                if (item.getAttribute('id') == id) {
                    item.classList.add('i-new');
                    item.classList.remove('i-old');
                } else {
                    item.classList.add('i-old');
                    item.classList.remove('i-new');
                }
            }
            var firstBtn = document.querySelector(`#${id} .btn-success`);
            player.src = firstBtn.getAttribute("data-video-url");
            player.load();
            player.play();
        }

        var videoPlayButtons = document.querySelectorAll("button"),
            player = document.getElementById("player");

                                                                        //for (var i = 0; i < videoPlayButtons.length; i++) {
                                                                        //    videoPlayButtons[i].addEventListener('click', swapVideo);
                                                                        //}
    </script>
    <script>
        $("#namelist li").click(function () {
            $('#preview-warapper').empty();
            var data = {
                id: $(this).attr('data-value'),
            };
            $.ajax({
                type: "POST",
                url: "/Playlist/CheckTypeMediaSrcInPlaylist",
                data: JSON.stringify(data),
                dataType: "json",
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    if (data.mediaType == 1) {
                        $('#preview-warapper').prepend($('<img>', { id: 'theImg', src: data.mediaURL }));
                        $("#theImg").css('height', '350px');
                        $("#theImg").css('width', '350px');
                    } else if (data.mediaType == 2) {
                        //$('#preview-warapper').append($("<video id='myVideo' src='video1.mp4'  />"));
                        var video = $('<video />', {
                            id: 'video',
                            src: data.mediaURL,
                            type: 'video/mp4',
                            controls: true
                        });
                        video.appendTo($('#preview-warapper'));
                        video[0].play();
                    }
                },
                error: function () {
                    alert("Error occured!!")
                }
            });
        });
    </script>
}

@section styles{

    <style>
        .stepContainer {
            max-height: 315px;
            display: block;
            position: relative;
            margin: 0;
            padding: 0;
            border: 0 solid #CCC;
            overflow-x: hidden;
        }

        .i-old {
            border-radius: 3px;
        }

        .i-new {
            border: 1px solid red;
            box-shadow: 20px 10px 20px;
        }

        #duration {
            position: relative;
            top: -15px;
            left: 0;
            display: inline-block;
            margin-left: 5%;
            width: 20px;
        }

        #title {
            display: inline-block;
            width: 200px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        #deleteArea {
            background-color: navajowhite;
            display: inline-block;
        }

        #namelist {
            display: inline-block;
            background-color: transparent;
            margin-right: 20px;
        }

        #preview-warapper {
            margin-left: 100px;
            box-shadow: 20px 10px 20px;
            background-color: transparent;
        }

        video {
            position: relative;
            width: 350px;
            height: 350px
        }


        #namelist li {
            width: 500px;
            height: 40px;
            background-color: aliceblue;
            line-height: 40px;
            cursor: move;
            list-style-type: none;
            margin-top: 10px;
            padding-left: 10px;
            padding-right: 10px;
        }

        .dropArea {
            background-color: #fee
        }

        .dropAreaHover {
            background-color: #f00;
        }
    </style>
}



