@section styles{
    <style>
        .stepContainer {
            max-height: 315px;
            display: block;
            position: relative;
            margin: 0;
            padding: 0;
            border: 0 solid #CCC;
            overflow-x: hidden;
        }

        .i-old {
            border-radius: 3px;
        }

        .i-new {
            border: 1px solid red;
            box-shadow: 20px 10px 20px;
        }

        #duration {
            position: relative;
            top: -15px;
            left: 0;
            display: inline-block;
            margin-left: 5%;
            width: 20px;
        }

        #title {
            display: inline-block;
            width: 200px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        #deleteArea {
            background-color: navajowhite;
            display: inline-block;
        }

        #namelist {
            display: inline-block;
            background-color: transparent;
            margin-right: 20px;
        }

        #preview-warapper {
            margin-left: 100px;
            box-shadow: 20px 10px 20px;
            background-color: transparent;
        }

        video {
            position: relative;
            width: 350px;
            height: 350px
        }

        #namelist li {
            width: 500px;
            height: 40px;
            background-color: aliceblue;
            line-height: 40px;
            cursor: move;
            list-style-type: none;
            margin-top: 10px;
            padding-left: 10px;
            padding-right: 10px;
        }

        .dropArea {
            background-color: #fee
        }

        .dropAreaHover {
            background-color: #f00;
        }
    </style>
}



