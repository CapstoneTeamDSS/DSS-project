    <!--Show all preview-->
    <script type="text/javascript" src="~/Content/HTML5Gallery/html5gallery.js"></script>
    <script>
        $("#playAll").on('click', function () {
            var divPreview = $('#preview-warapper');
            divPreview.empty();
            var url = [];
            $('.media-datas').each(function () {
                url.push($(this).attr('data-url'));
            });
            divPreview.addClass("html5gallery");
            divPreview.attr({ "data-skin": "darkness", "data-width": "480", "data-height": "272", "data-resizemode": "fill" });
            if (url.length > 0) {
                for (var i = 0; i < url.length; i++) {
                    divPreview.append("<p><a href=" + url(i) + "></a></p>");
                }
            }          
        });
