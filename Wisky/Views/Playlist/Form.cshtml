        $("input:checkbox[name='fileType']").change(function () {
            var values = [];
            $("input:checkbox[name='fileType']:checked").each(function () {
                values.push($(this).val());
            });
            $("#multiselect1").find("option").each(function () {
                var type = $(this).attr("data-type");
