@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout_Popup.cshtml";
    bool isHorizontal = true;
    if (Model != null)
    {
        isHorizontal = Model?.isHorizontal ?? true;
    }
    <style>
        body {
            overflow-x: hidden;
        }
    </style>
}
<div class="">
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>@((Model?.ScreenId != null) ? "Update Screen information" : "Add new Screen")</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br>
                    @using (Html.BeginForm((Model?.ScreenId != null) ? "Update" : "Add", "Screen", new { ScreenId = (Model?.ScreenId) }, FormMethod.Post, new { @id = "frm_screen", @class = "form-horizontal form-label-left", role = "form" }))
                    {
                        @Html.ValidationSummary()
                        //show error - validation
                        <div>
                            <ul class="mylist"></ul>
                        </div>
                        //end show error - validation
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                Screen Name <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="first-name"
                                       name="Name"
                                       class="form-control col-md-7 col-xs-12"
                                       data-parsley-id="5" type="text"
                                       value="@(Model?.Name)">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                Location  <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <select class="select2_group form-control" name="LocationId" id="location-list">
                                    <option value="-1">--- Select Location ---</option>
                                    @{
                                        var locationList = ViewBag.locationList as List<DSS.Models.LocationAdditionalVM>;
                                        if (locationList != null)
                                        {
                                            foreach (var item in locationList)
                                            {
                                                <option value="@(item.LocationId)" @(Model?.LocationId == item.LocationId ? "selected" : "")>@(item.Address),Quan @(item.District),@(item.Province)</option>
                                            }
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                Type  <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12" style="padding-top:10px">
                                <input type="radio" name="isHorizontal" @(!isHorizontal ? "checked" : "") value="false"> &nbsp; Portraint &nbsp;
                                <input type="radio" name="isHorizontal" @(isHorizontal ? "checked" : "") value="true"> Landscape
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                Resolution  <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <select class="select2_group form-control" name="ResolutionId" id="resolution-list">
                                    <option value="-1">--- Select Resolution ---</option>
                                    @{
                                        var resolutionList = ViewBag.resolutionList as List<DSS.Models.ResolutionDetailVM>;
                                        if (resolutionList != null)
                                        {
                                            foreach (var item in resolutionList)
                                            {
                                                <option value="@(item.Id)" @(Model?.ResolutionId == item.Id ? "selected" : "")>@(item.Height) X @(item.Width)</option>
                                            }
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                Description
                            </label>
                            <div class="col-md-3 col-sm-9 col-xs-9">
                                <textarea class="form-control" rows="3" name="Description">@(Model?.Description)</textarea>
                            </div>
                            @*<input type="hidden" name="Id" value="@(Model?.Id)"/>*@
                        </div>
                        <div class="ln_solid"></div>
                        if (Model?.ScreenId == null)
                        {
                            <div class="form-group">
                                <div class="col-md-12 col-sm-12 col-xs-12 col-md-offset-3 col-sm-offset-3 col-xs-offset-3">
                                    <button class="btn btn-primary" type="reset">Reset</button>
                                    <button type="button" onclick="checkValidation()" class="btn btn-success" id="btnSubmit">Submit</button>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="form-group">
                                <div class="col-md-12 col-sm-12 col-xs-12 col-md-offset-3 col-sm-offset-3 col-xs-offset-3">
                                    <button type="button" class="btn btn-warning" onclick="parent.jQuery.fn.colorbox.close();">Cancel</button>
                                    <button type="button" onclick="checkValidation()" class="btn btn-success" id="btnSubmit">Submit</button>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <!--Radio Button Check Type Value-->
    <script>
        var value;
        $('input[name=optradio]').change(function () {
            value = $('input[name=optradio]:checked').val();
        });
    </script>
    <!--End Radio Button Check Type Value-->
    <!--Validation-->
    <script>
        function checkValidation() {
            $(".mylist").empty();
            var stringError = [];
            if ($('#first-name').val() == '') {
                stringError.push("Please input screen name.");
            }
            if ($("#location-list").prop("selectedIndex") === 0) {
                stringError.push("Please choose location.");
            }
            if ($("#resolution-list").prop("selectedIndex") === 0) {
                stringError.push("Please choose resolution.");
            }
            if (stringError.length > 0) {
                var cList = $('ul.mylist')
                $.each(stringError, function (i) {
                    var li = $('<li/>')
                        .addClass('ui-menu-item')
                        .attr('role', 'menuitem')
                        .appendTo(cList);
                    var aaa = $('<a/>')
                        .addClass('ui-all')
                        .text(stringError[i])
                        .css('color', 'red')
                        .appendTo(li);
                });
            } else {
                $("#frm_screen").submit();
            }
        }
    </script>
    <!-- End Validation-->
    <!--Sweet alert-->
    <script src='https://cdn.rawgit.com/t4t5/sweetalert/v0.2.0/lib/sweet-alert.min.js'></script>
    <!--End Sweet alert-->
}
@section styles{
    <!--Sweet alert-->
    <link rel='stylesheet' href='https://cdn.rawgit.com/t4t5/sweetalert/v0.2.0/lib/sweet-alert.css'>
    <!--End Sweet alert-->
    <!--Set color is red when show error validation-->
    <style>
        .validation-summary-errors {
            color: red;
        }
    </style>
    <!--End Set color is red when show error validation-->
}

