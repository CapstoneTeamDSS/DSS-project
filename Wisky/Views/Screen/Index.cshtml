@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Screen Management</h3>
        </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Screen list</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="bs-glyphicons" style="width:60%; margin-left: 40%;">
                    <a href="/Screen/Form" class="iframe">
                        <ul class="bs-glyphicons-list">
                            <li>
                                <span class="glyphicon glyphicon-plus" aria-hidden="true" text-align:center></span>
                            </li>
                        </ul>
                    </a>
                </div>
                <div class="x_content">
                    <p class="text-muted font-13 m-b-30">
                        DataTables has most features enabled by default, so all you need to do to use it with your own tables is to call the construction function: <code>$().DataTable();</code>
                    </p>
                    <table id="datatable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column descending" aria-sort="ascending">
                                    Screen Name
                                </th>
                                <th>Type</th>
                                <th>Description</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var screenList = ViewBag.screensList as List<DSS.Models.ScreenVM>;
                                var i = 0;
                                foreach (var item in screenList)
                                {
                                    <tr>
                                        <td>@(++i)</td>
                                        <td>@(item.Name)</td>
                                        <td>@(item.isHorizontal ? "Landscape" : "Portraint")</td>
                                        <td>@(item.Description)</td>

                                        <td style="width:180px; text-align:center">
                                            <a href="/Screen/Form/@(item.ScreenId)" class="iframe"><i class="fa fa-pencil btn btn-info"> Edit</i></a>
                                            <a class="btnDelete" data-id="@item.ScreenId"><i class="fa fa-trash btn btn-danger"> Delete</i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
