
@{
    ViewBag.Title = "Matching Device";
}


<<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Matching Your Device</small></h3>
        </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">
        <div>
            <div class="x_panel">
                <div class="x_title">
                    <h2>Matching Panel</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div width:50%;">
                        <label>Location</label>
                        <select style="width:300px; height:25px" id="locationSelect">
                            <option value="0">--- Select Location ---</option>
                            @{
                                var locationStringList = ViewBag.locationStringList as List<DSS.Models.LocationStringVM>;
                                foreach (var item in locationStringList)
                                {
                                    <option value="@(item.LocationId)">@(item.LocationStringList)</option>
                                }
                            }
                        </select>
                    </div>
                    <p class="text-muted font-13 m-b-30" style="color:dodgerblue">
                        Please select screen and android box you wish to match.
                    </p>
                    <div style="float:left; width:100%">
                        <label>Screen</label>

                        <select style="width:300px; height:25px">
                            <option>Choose screen</option>
                        </select>
                        <div style="float:left; width:50%; ">
                            <label>Android Box</label>

                            <select style="width:300px; height:25px">
                                <option>Choose box</option>
                                <option>Option one</option>
                                <option>Option two</option>
                                <option>Option three</option>
                                <option>Option four</option>
                            </select>
                        </div>
                        <div style="float:right"><button type="submit" class="btn btn-success" style="margin-bottom:20px">Match</button></div>
                    </div>
                    <table id="datatable" class="table table-striped table-bordered">
                        <thead>
                            <tr>

                                <th>
                                    No
                                </th>
                                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column descending" aria-sort="ascending">
                                    Device ID
                                </th>
                                <th>Description</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var deviceList = ViewBag.devicesList as List<DSS.Models.MatchingDeviceVM>;
                                var j = 0;
                                foreach (var item in deviceList)
                                {
                                    <tr>
                                        <td>@(++j)</td>
                                        <td>@(item.DeviceId)</td>
                                        <td>@(item.Description)</td>

                                        <td style="width:180px; text-align:center">

                                            <a href="/AndroidBox/Delete/@(item.DeviceId) "><i class="fa fa-trash btn btn-danger"> Delete</i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
