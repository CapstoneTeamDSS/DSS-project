                    success: function (data) {
                        //data = JSON.parse(data);
                        //remove data when change location
                        $("#boxListById").find('option').remove().end()
                            .append('<option value="' + 0 + '">' + "--- Choose Box ---" + '</option>');
                        $("#screenListById").find('option').remove().end().append('<option value="' + 0 + '">' + "--- Choose Screen ---" + '</option>');
                        //load data box, screen by loaction id
                        for (var i = 0; i < data.boxListByLocationId.length; i++) {
                            if (data.boxListByLocationId[i] != '') {
                                $('#boxListById').append('<option value="' + data.boxListByLocationId[i].BoxId + '">' + data.boxListByLocationId[i].Name + '</option>');
                            }
                        }
                        for (var i = 0; i < data.screenListByLocationId.length; i++) {
                            if (data.screenListByLocationId[i] != '') {
                                $('#screenListById').append('<option value="' + data.screenListByLocationId[i].ScreenId + '">' + data.screenListByLocationId[i].Name + '</option>');
                            }
                        }
                    },
                    error: function () {
                        alert("Error occured!!")
                    }
                });
            });
        </script>
        @*show information button*@
        <script>
            // Get the modal
            var modal = document.getElementById('myModal');

            // Get the button that opens the modal
            var btnMatch = document.getElementById("btnMatch");

            // Get the <span> element that closes the modal
            var span = document.getElementsByClassName("close")[0];

            // When the user clicks the button, open the modal
            btnMatch.onclick = function () {
                modal.style.display = "block";
            }

            // When the user clicks on <span> (x), close the modal
            span.onclick = function () {
                modal.style.display = "none";
            }

            // When the user clicks anywhere outside of the modal, close it
            window.onclick = function (event) {
                if (event.target == modal) {
                    modal.style.display = "none";
                }
            }
        </script>
        @* end show information button *@
        @* check value seleted *@
        <script>
            $(document).ready(function () {
                setBtnStatus();
            });
            $("#boxListById").change(function () {
                setBtnStatus();
            });
            $("#screenListById").change(function () {
                setBtnStatus();
            });
            function setBtnStatus() {
                var box = $('#boxListById');
                var screen = $('#screenListById');
                var btnMatch = $('#btnMatch');
                if (box.val() == 0 || screen.val() == 0) {
                    btnMatch.attr("disabled", true);
                } else {
                    btnMatch.attr("disabled", false);
                }

            }
        </script>
        @* end check value seleted *@

    }

