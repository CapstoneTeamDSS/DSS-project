@section scripts{
    <!--Change status enable disable-->
    <script>
        /*Change status enable disable*/
        function changeStatus(el) {
            var curStt = $(el).attr("data-stt") == "true" || $(el).attr("data-stt") == "True";
            var dataId = $(el).attr("data-id");
            $.ajax({
                type: "GET",
                url: "/MediaSrc/UpdateStatus?dataId=" + dataId,
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    if (data.success) {
                        curStt = !curStt;
                        $(el).attr("data-stt", curStt ? "true" : "false"); //Change status
                        $(el).html((curStt) ? $("#public").val() : $("#private").val()); //Change status text
                        $(el).css("color", curStt ? "green" : "red"); //Change status color
                    }
                },
                error: function () {
                    alert($("#error").val())
                }
            });
        }
    </script>
    <!--End Change status enable disable-->
    <!-- preview button scripts-section -->
    <script type="text/javascript" src="~/Content/index-media-preview-video/src/jquery.flashy.min.js"></script>
    <script type="text/javascript" src="~/Content/index-media-preview-video/js/main.js"></script>
    <!-- /end scripts-section -->
    <!-- iframe button matching-->
    <script src="~/Content/form-matching-device/jquery.colorbox.js"></script>
    <script>
        $(document).ready(function () {            
            //Examples of how to assign the Colorbox event to elements
            $(".iframe").colorbox({
                iframe: true, width: "65%", height: "70%",
                //refresh page when summit
                //onClosed: function () { location.reload(true); },
            });
            $(".preview").colorbox({
                iframe: true, width: "55%", height: "60%",
                //refresh page when summit
            });
            //Example of preserving a JavaScript event for inline calls.
            $("#click").click(function () {
                $('#click').css({ "background-color": "#f00", "color": "#fff", "cursor": "inherit" }).text("Open this window again and this message will still be here.");
                return false;
            });
        });
    </script>
    <!-- end iframe button matching-->
    <!--Sweet alert-->
    <script src='https://cdn.rawgit.com/t4t5/sweetalert/v0.2.0/lib/sweet-alert.min.js'></script>
    <script>
        $(".btnDelete").click(function () {
            var btnDel = $(this);
            var IdMediaSrc = $(btnDel).attr("data-id");
            var data = {
                id: IdMediaSrc,
            };
            $.ajax({
                type: "POST",
                url: "/MediaSrc/CheckMediaIdIsUsed",
                data: JSON.stringify(data),
                dataType: "json",
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    //set title warming when playlistVMlist.length <= 3
                    var title = "";
                    if (data.playlistVMlist.length <= 3) {
                        for (var i = 0; i < data.playlistVMlist.length; i++) {
                            title += data.playlistVMlist[i].Title;
                            if (i < data.playlistVMlist.length - 1) {
                                title += ", ";
                            }
                        }
                    } else {//set title warming when playlistVMlist.length > 3 show ...
                        for (var i = 0; i < 3; i++) {
                            title += data.playlistVMlist[i].Title;
                            if (i < data.playlistVMlist.length - 1) {
                                title += ", ";
                            }
                        }
                        title += "...";
                    }
                    //show sweerAlert warming
                    if (data.isUsing) {
                        swal($("#use").val(), $("#text").val() + title + $("#text2").val(), "error");
                    } else {
                        swal({
                            title: $("#text3").val(),
                            text: $("#text4").val(),
                            type: "warning",
                            showCancelButton: true,
                            confirmButtonColor: '#DD6B55',
                            confirmButtonText: $("#yes").val(),
                            cancelButtonText: $("#no").val(),
                            closeOnConfirm: false,
                            closeOnCancel: false
                        },
                            function (isConfirm) {
                                if (isConfirm) {
                                    var IdDelete = $(btnDel).attr("data-id");
                                    $(btnDel).attr("href", "/MediaSrc/Delete?Id=" + IdDelete);
                                    $.ajax({
                                        type: "GET",
                                        url: "/MediaSrc/Delete?Id=" + IdDelete,
                                        contentType: 'application/json; charset=utf-8',
                                        success: function (data) {
                                            swal($("#text5").val(), $("#text6").val(), "success");
                                            location.reload();
                                        },
                                        error: function () {
                                            alert($("#text7").val())
                                        }
                                    });
                                } else {
                                    swal($("#text8").val(), $("#text9").val(), "error");
                                }
                            });
                    }
                },
                error: function () {
                    alert($("#error").val());
                }
            });
        });
    </script>
    <!--End Sweet alert-->
}
